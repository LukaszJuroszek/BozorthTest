{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "gdb",
        "request": "launch",
        "name": "Launch by gdb",
        "target": "./a.exe",
        "arguments": "-v a0_2.xyt a0.xyt",
        "cwd": "${workspaceRoot}"
    },
        {
            "name": "C++ native ",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/a.exe",
            "args": ["-v a0.xyt a0_2.xyt"],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "C++ Attach (Windows)",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}